<%= form_with model: @bulk_discount, method: method, url: url, class: 'bulk_discount_form', local: true do |f| %>  
<%= f.label :description, 'Description:' %>
<%=  f.text_field :description %><br><br>
<%= f.label :percentage, 'Percentage:' %>
<%=  f.number_field :percentage, in: 1..100 %> <br><br>
<%= f.label :threshold, 'Threshold:' %>
<%=  f.number_field :threshold %> <br><br>
<%= f.button :create %>
<% end %>